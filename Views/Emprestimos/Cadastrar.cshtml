@model EmprestimosModel
@{
    ViewData["title"] = "Cadastrar Empréstimo";

}

<div class="Container bg-dark p-5 rounded-5">
   <div class="mb-5 text-center"> 
       <h1 class="text-light">Cadastro</h1>
   </div>

    <form method="post" asp-controller="Emprestimos" asp-action="Cadastrar">
        <div class="mb-3">
            <label for="Recebedor" class="form-label">Recebedor</label>
            <input type="text" class="form-control  text-light" asp-for="Recebedor" id="Recebedor" placeholder="Quem está recebendo">
            <span class="text-danger" asp-validation-for="Recebedor"></span>
        </div>

        <div class="mb-3">
            <label for="Fornecedor" class="form-label">Fornecedor</label>
            <input type="text" class="form-control  text-light" asp-for="Fornecedor" id="Fornecedor" placeholder="Quem está fornecendo">
            <span class="text-danger" asp-validation-for="Fornecedor"></span>
        </div>

        <div class="mb-3">
            <label for="Livro" class="form-label ">Livro</label>
            <input type="text" class="form-control  text-light" asp-for="LivroEmprestado" id="Livro" placeholder="Qual o nome do livro">
            <span class="text-danger" asp-validation-for="LivroEmprestado"></span>
        </div>

        <div class="d-flex  gap-5 mt-5">
            <button type="submit" class="btn btn-success w-50">Cadastrar</button>
            <a class="btn btn-primary w-50" asp-controller="Emprestimos" asp-action="Index">Voltar</a>
        </div>
       
    </form>
</div>