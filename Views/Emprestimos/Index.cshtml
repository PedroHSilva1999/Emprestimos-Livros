@model List<EmprestimosModel>


<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-5 ">
        <h1>Empréstimos</h1>
        <a class="btn btn-success mx-2" asp-asp-controller="Emprestimos" asp-action="Exportar"><i class="bi bi-door-open mx-2"></i>Exportar</a>
        <a class="btn btn-success mx-2" asp-asp-controller="Emprestimos" asp-action="Cadastrar"><i class="bi bi-door-open mx-2"></i>Cadastar Novo Empréstimos</a>
    </div>


    @if(TempData["MensagemSucesso"]!= null)
    {
        <div class="alert alert-success text-light" role="alert">
            @TempData["MensagemSucesso"]
        </div>
    }
    @if (TempData["MensagemErro"]!= null)
    {
        <div class="alert alert-success text-light" role="alert">
            @TempData["MensagemErro"]
        </div>
    }
    @if (TempData["MensagemEdicao"] != null)
    {
        <div class="alert alert-success text-light" role="alert">
            @TempData["MensagemEdicao"]
        </div>
    }

    <!--ID DA TABELA-->
    <table id="Emprestimos" class="table table-hover table-dark">

        
        <thead>
            <tr>
                <th scope="col">Recebedor do Livro</th>
                <th scope="col">Fornecedor do Livro</th>
                <th scope="col">Título do Livro</th>
                <th scope="col">Data do Empréstimo</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if(Model != null)
            {
                @foreach(var emprestimo in Model)
                {
                    <tr>
                        <td>@emprestimo.Recebedor</td>
                        <td>@emprestimo.Fornecedor</td>
                        <td>@emprestimo.LivroEmprestado</td>
                        <td>@emprestimo.DataEmprestimo</td>

                        <td>
                            <a asp-controller="Emprestimos" asp-action="Editar" asp-route-id="@emprestimo.Id" class="btn btn-warning mx-2"> <i class="bi bi-pencil-square mx-2"></i>Editar</a>
                            <a asp-controller="Emprestimos" asp-action="Excluir" asp-route-id="@emprestimo.Id" class="btn btn-danger mx-2"><i class="bi bi-trash3-fill mx-2"></i>Excluir</a>
                        </td>
                    </tr>
                }
            }
            
        </tbody>
    </table>

</div>